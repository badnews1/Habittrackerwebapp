{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      
      // ✅ ПОСТОЯННЫЕ АЛИАСЫ (модульная структура)
      "@/modules/*": ["./modules/*"],
      "@/shared/*": ["./shared/*"],
      "@/core/*": ["./core/*"],
      "@/components/ui/*": ["./components/ui/*"],     // ⚠️ Shadcn UI (защищено Figma)
      "@/components/figma/*": ["./components/figma/*"], // ⚠️ Figma (защищено)
      "@/components/dev/*": ["./components/dev/*"],   // ⚠️ Dev tools (защищено)
      
      // ⏳ ВРЕМЕННЫЕ АЛИАСЫ (для безопасной миграции - удалить после Этапа 5)
      // Эти алиасы позволяют старым импортам продолжать работать во время переноса файлов
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/utils/*": ["./utils/*"],
      "@/types/*": ["./types/*"],
      "@/constants/*": ["./constants/*"],
      "@/services/*": ["./services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
